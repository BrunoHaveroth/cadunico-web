<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="pull-left">Pessoas Cadastradas</h4>
        {{application-search
          model=model
          skip=skip
          store=store
          noLoadMore=noLoadMore
          customEndPoint='searchPeople'
          modelName='person'}}
        <div class="clearfix"></div>
      </div>
      <div class="panel-body">
        <div class="table-responsive table-client">
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              {{#each model as |person|}}
                <tr>
                  <td>{{person.id}}</td>
                  <td>{{person.fullName}}</td>
                  <td class="text-center">
                    {{#link-to 'users.show' person}}
                      <i class="btn btn-default fa fa-search" data-toggle="tooltip" title="Visualizar Pessoa"></i>
                    {{/link-to}}
                    {{#link-to 'users.edit' person}}
                      <i class="btn btn-default fa fa-edit" data-toggle="tooltip" title="Editar Pessoa"></i>
                    {{/link-to}}
                    <i class="btn btn-danger fa fa-remove" data-toggle="tooltip" title="Remover Cadastro" {{action 'deletePerson' person model}}></i>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{application-pagination
          model=model
          skip=skip
          noLoadMore=noLoadMore
          loading=loading}}
      </div>
    </div>
  </div>
</div>
