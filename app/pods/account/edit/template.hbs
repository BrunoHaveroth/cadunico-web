<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              <h4>CONTAS</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                          <div class="form-group">
                              <label>Nome</label>
                              {{input class="form-control" type="text" value=model.name}}
                          </div>
                            <div class="form-group add-user">
                              {{#x-select default=anything action="selectionsChanged"}}
                                <option>Usu√°rios</option>
                                {{#each response.users as |item|}}
                                  {{#x-option value=item.id}}{{item.name}}{{/x-option}}
                                {{/each}}
                              {{/x-select}}

                              <button class="btn btn-default btn-add-user-account" type="button" name="button"{{action 'addUser'}}>ADD</button>
                            </div>
                            <button type="submit" class="btn btn-default">Salvar</button>
                        </form>
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
