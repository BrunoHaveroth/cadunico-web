                                <td>{{item.name}}</td>
                                <td class="text-center">
                                  {{#link-to 'account.show' item}}
                                    <i class="btn btn-default fa fa-search" data-toggle="tooltip" title="Visualizar cliente"></i>
                                  {{/link-to}}
                                  {{#link-to 'account.edit' item}}
                                    <i class="btn btn-default fa fa-edit" data-toggle="tooltip" title="Editar CÃ³digo"></i>
